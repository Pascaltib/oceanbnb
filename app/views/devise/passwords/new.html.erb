

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

<h4 class="form-title">Forgot your password?</h4>
<div class="form-container container-fluid">
<h4 class="form-subtitle">Recover your information</h4>
  <div class="row">
    <div class="col">
  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <div class="button"><%= f.button :submit, "Send me the reset password instructions" %></div>
    <div class="render"><%= render "devise/shared/links" %></div>
  </div>
  </div>
  </div>

<% end %>
