<video autoplay muted loop id="myVideo">
  <source src="/../../assets/videos/background_video.mp4" type="video/mp4">
</video>

<div class="yacht-container container-fluid">
  <h3 class="page-title">ALL OF OUR YATCHS</h3>

  <div class="row justify-content-evenly">
      <% @yachts.each do |yacht| %>
      <div class="col-6 col-lg-4 col-xl-3">
        <div class="card">
            <img src="<%= yacht.image_url %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= link_to yacht.name, yacht_path(yacht) %></h5>
              <p class="card-text"><strong>Description:</strong> <%= yacht.description %></p>
              <div class="card-bottom d-flex justify-content-between">
                <p class="card-text"><strong>Capacity:</strong> <%= yacht.capacity %></p>
                <p class="card-button btn btn-primary"><%= link_to "View", yacht_path(yacht) %></p>
              </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "footer" %>
