<%= render 'shared/navbar' %>
<% # container of the page %>
<div class="container justify-content-around align-items-center">
  <div class="row justify-content-center">
    <% # CARD container %>
    <div class="first-show-card bg-white rounded shadow col-4" id="card">
      <img src="<%= @yacht.image_url %>" class="show-image" alt="...">
      <div class="show-card-body">
        <ul class="list-group">
          <div class="list-group-item"><h5 class="name"><%= @yacht.name %></h5></div>
          <div class="list-group-item card-text"><strong style="color: #333333">Price per day: â‚¬</strong><%= number_with_delimiter(@yacht.price, :delimiter => ',') %></div>
          <div class="list-group-item card-text"><strong style="color: #333333">Capacity: </strong><%= @yacht.capacity %></div>
          <div class="list-group-item"><strong style="color: #333333">Description: </strong><%= @yacht.description %></div>
        </ul>
      </div>
    </div>

    <div class="reserve_ammenities col-3">
      <div class="card-reserve">
          <% # RESERVATION-BOX container %>
        <div class="first-show-card bg-white rounded shadow" id="reservation-box">
          <%= simple_form_for [@yacht, @booking] do |f| %>
          <h4>Reserve your dates</h4>
          <%= f.input :start_date, as: :string, required: false, input_html: { class: "datepicker" } %>
          <%= f.input :end_date, as: :string, required: false, input_html: { class: "datepicker" } %>
          <%= f.submit "Make Reservation", class: "btn btn-light index-card-button" %>
        <% end %>
        </div>
      </div>
      <br>
      <% # amenities and back button %>
      <div class="first-show-card bg-white rounded shadow" id="reservation-box">
        <h4>Ammenities</h4>
        <div class="ammenities-body">
        <ul class="list-group ammenities-text">
          <li class="list-group-item card-text"><strong style="color: #333333">WIFI</strong></li>
          <li class="list-group-item card-text"><strong style="color: #333333">Pool</strong></li>
          <li class="list-group-item card-text"><strong style="color: #333333">Jacuzzy</strong></li>
        </ul>
      </div>
      </div>

    </div>

    <div class="first-show-card bg-white rounded shadow col-4" id="map-container">
      <div id="map" class = ""
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
        <div class="b-button">
          <%= link_to yachts_path, class: "btn btn-light index-card-button" do %>
          Back
          <% end %>
        </div>
</div>

<%= render "footer" %>
